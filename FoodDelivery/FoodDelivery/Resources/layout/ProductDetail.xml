<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backlogin"
    android:gravity="center">
    <ImageView
        android:src="@android:drawable/ic_menu_gallery"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/imageViewProductDetail" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:background="@drawable/border"
        android:layout_margin="40dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:paddingLeft="20dp">
            <TextView
                android:text="Name:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="25px"
                android:textSize="18dp"
                android:id="@+id/productNameTextString" />
            <TextView
                android:text="ProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25px"
                android:textSize="18dp"
                android:id="@+id/productNametextView2" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:paddingLeft="20dp">
            <TextView
                android:text="Price:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="25px"
                android:textSize="18dp"
                android:id="@+id/productPriceTextString" />
            <TextView
                android:text="ProductPrice11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25px"
                android:textSize="18dp"
                android:id="@+id/productPricetextView" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:paddingLeft="20dp">
            <TextView
                android:text="Description:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="25px"
                android:textSize="18dp"
                android:id="@+id/ProductDescriptionTextString" />
            <TextView
                android:text="Text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="25px"
                android:textSize="18dp"
                android:id="@+id/ProductDescriptionTextView" />


        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:layout_margin="15dp">
            <TextView
                android:text="Quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="25px"
                android:textSize="18dp"
                android:id="@+id/productQuantitytextView" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:text="-"
                    style="@style/ButtonAddShopIn"
                    android:background="@drawable/btnchart"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:id="@+id/buttonMinusQuantity" />
                <EditText
                    android:text="1"
                    android:textAlignment="center"
                    android:layout_width="100px"
                    android:layout_height="wrap_content"
                    android:id="@+id/productQuantityEditText" />
                <Button
                    android:text="+"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/btnchart"
                    style="@style/ButtonAddShopIn"
                    android:id="@+id/buttonAddQuantity" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:text="Add to chart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ButtonYellow"
        android:background="@drawable/btnyellow"
        android:id="@+id/buttonAddChart" />
</LinearLayout>