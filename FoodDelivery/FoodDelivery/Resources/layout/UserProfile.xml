<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="50dp"
    android:background="@drawable/backLogin"
    android:paddingRight="50dp"
    android:gravity="center">
    <ImageView
        android:src="@drawable/profile"
        style="@style/ImageProfile"
        android:contentDescription="ImageProfile"
        android:id="@+id/UserimageView"/>
    <TextView
        android:text="@string/textName"
        style="@style/UsernameText"
        android:id="@+id/textViewProfileName" />
    <TextView
        android:text="@string/textEmail"
        style="@style/EmailText"
        android:id="@+id/textViewProfileEmail" />
    <Button
        style="@style/ButtonGrey"
        android:background="@drawable/btngrey"
        android:text="@string/btnOrderProducts"
        android:drawableLeft="@drawable/ic_restaurant"
        android:id="@+id/showResturantsButton" />
    <Button
        style="@style/ButtonGrey"
        android:background="@drawable/btngrey"
        android:text="@string/btnOrderProfile"
        android:drawableLeft="@drawable/ic_shopping_cart"
        android:id="@+id/btnOrder" />
    <Button
        style="@style/ButtonGrey"
        android:background="@drawable/btngrey"
        android:text="@string/buttonMyOrders"
        android:drawableLeft="@drawable/ic_history"
        android:id="@+id/btnMyOrders" />
    <Button
        style="@style/ButtonRed"
        android:background="@drawable/btnred"
        android:text="@string/buttonLogout"
        android:drawableLeft="@drawable/ic_logout"
        android:textAlignment="viewStart"
        android:id="@+id/btnLogOut" /> 
     
</LinearLayout>
