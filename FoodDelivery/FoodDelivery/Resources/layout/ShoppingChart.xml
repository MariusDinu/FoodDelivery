<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backregister2"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    android:gravity="center">
    <TextView
        android:text="@string/titleShoppingCart"
        style="@style/ShoppingText"
        android:textColor="@android:color/white"
        android:textSize="25dp"
        android:id="@+id/shoppingChartTextView" />
  
    <androidx.recyclerview.widget.RecyclerView
        android:minWidth="25px"
        android:minHeight="25px"
        android:scrollbars="vertical"
        android:background="@drawable/border"
        android:layout_width="match_parent"
        android:layout_height="315.8dp"
        android:id="@+id/shoppingChartRecyclerView"
        android:layout_marginTop="0.0dp"
        android:layout_marginBottom="1.1dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:text="@string/PriceShoppingCart"
            style="@style/Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minWidth="25px"
            android:minHeight="50dp"
            android:id="@+id/shoppingChartPriceText" />
        <TextView
            android:text="Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="50dp"
            android:id="@+id/shoppingChartPriceInput"/>
        <Button
            style="@style/ButtonYellow"
            android:background="@drawable/btnyellow"
            android:text="@string/buttonOrderSend"
            android:id="@+id/buttonOrderFinal" />
    </LinearLayout>


</LinearLayout>
