<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="25dp"
    android:background="@drawable/border"
    >
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:id="@+id/linearLayout2">
        <TextView
            android:text="@string/OrderRestaurant"
            style="@style/RestaurantViewHolder"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingBottom="35dp"
            android:id="@+id/textViewHolderNameOrders" />
        <TextView
            android:text="@string/OrderPrice"
            style="@style/PriceViewHolder"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:id="@+id/textViewHolderPriceOrders" />

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:id="@+id/linearLayout3">

        <TextView
            android:text="@string/OrderDate"
            style="@style/DateViewHolder"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="viewEnd"
            android:paddingBottom="35dp"
            android:paddingRight="10dp"
            android:id="@+id/textViewHolderDateOrders" />
        <TextView
            android:text="@string/OrderStatus"
            style="@style/StatusViewHolder"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="viewEnd"
            android:paddingRight="10dp"
            android:id="@+id/textViewHolderStatusOrders" />
    </LinearLayout>






</LinearLayout>
