<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@drawable/border">
    <ImageView
        android:src="@android:drawable/ic_menu_gallery"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:contentDescription="@string/ProductName"
        android:layout_gravity="center"
        android:id="@+id/shoppingChartImageView" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:text="@string/ProductName"
            style="@style/Price"
            android:padding="20px"
            android:textSize="20dp"
            android:id="@+id/ProductNameOrder" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="viewStart">

            <Button
                android:text="@string/btnMinusProduct"
                style="@style/ButtonAddShopIn"
                android:background="@drawable/btnchart"
                android:id="@+id/buttonMinus" />
            <TextView
                android:text="@string/QuantityOrderFinal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20px"
                android:id="@+id/ProductQuantityOrder" />
            <Button
                android:text="@string/btnPlusProduct"
                style="@style/ButtonAddShopIn"
                android:background="@drawable/btnchart"
                android:id="@+id/buttonPlus" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

