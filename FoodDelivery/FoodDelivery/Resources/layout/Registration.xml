<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25px"
    android:minHeight="25px"
    android:paddingRight="25dp"
    android:paddingLeft="25dp"
    android:textAlignment="center"
    android:gravity="center"
    android:background="@drawable/backregister2"
    android:id="@+id/linearLayout1">
    <ImageView
        android:src="@drawable/profile"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView1" />

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:padding="20dp"
        android:background="@drawable/border">
        <EditText
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:hint="Email"
            android:drawableStart="@drawable/ic_email"
            android:id="@+id/editTextEmail" />
        <EditText
            android:layout_width="match_parent"
            android:textColor="@drawable/btnyellow"
            android:layout_height="60dp"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:drawableStart="@drawable/ic_supervised_user_circle"
            android:hint="Username"
            android:id="@+id/editTextUserName" />
        <EditText
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawableStart="@drawable/ic_security"
            android:hint="Password"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:id="@+id/editTextPassword" />
        <EditText
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawableStart="@drawable/ic_security"
            android:hint="Password"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:id="@+id/editTextPassword2" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:text="Add Photo"
                style="@style/ButtonAddFiles"
                android:background="@drawable/btnyellow"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonAddFiles" />
            <TextView
                android:text=""
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/textViewAddFiles" />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:text="Register"
        style="@style/ButtonYellow"
        android:background="@drawable/btnyellow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/btnRegister" />
</LinearLayout>

