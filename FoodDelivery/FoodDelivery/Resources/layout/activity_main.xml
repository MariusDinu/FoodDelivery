<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backlogin"
    android:gravity="center">
    
    <TextView
        android:text="@string/TitleStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20px"
        android:textSize="50dp"
        android:textStyle="bold"
        android:layout_margin="20dp"
        android:id="@+id/textTitleStart" />
    <Button
        android:text="@string/buttonRegisterStart"
       android:layout_width="150dp"
        android:layout_height="70dp"
        android:minWidth="25px"
        android:minHeight="25px"
        android:padding="20px"
        style="@style/ButtonYellow"
        android:background="@drawable/btnyellow"
        android:id="@+id/buttonRegisterStart" />
    <TextView
        android:text="@string/SpaceBetweenButtonsStart"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20px"
        android:id="@+id/textSpaceBetweenStart" />
    <Button
        android:text="@string/buttonLoginStart"
        style="@style/ButtonYellow"
        android:background="@drawable/btnyellow"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:padding="20px"
        android:id="@+id/buttonLoginStart" />

</LinearLayout>
